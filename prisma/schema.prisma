generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         Int         @id @default(autoincrement())
  email      String      @unique
  name       String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  timeStamps TimeStamp[]
}

model TimeStamp {
  id           Int      @id @default(autoincrement())
  user         User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id      Int
  time_in      DateTime @default(now())
  time_out     DateTime?
  duration     Int?
  country      String?
  timeZone     String?
  utcOffset    String?   // Now stores like "GMT+05:30"
  localTimeIn  String?
  localTimeOut String?

  @@map("timestamps")
}
